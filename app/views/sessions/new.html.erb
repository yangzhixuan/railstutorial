<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %> <br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %> <br />
    <%= f.password_field :password %> <br />
  </div>

  <div class="field">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me, {}, "yes", "no" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in" %>
    &nbsp;&nbsp;  New user? <%= link_to "Sign up now!", signup_path %> 
  </div>
<% end %>

